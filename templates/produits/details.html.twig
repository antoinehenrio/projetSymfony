{% extends'base.html.twig' %}
{% block body %}
    <div class="container">
        <div class="jumbotron">
            <div class="container">
                <div class="row">
                    <div class="col-md-8">
                        <h1>{{ produit.titre }}</h1>
                        <h2>{{ produit.stockQte }} pièces - {{ produit.poids }} Kg</h2>
                        <div class="text-primary" style="font-size: 4rem;font-weight: bold;">{{ produit.PriceTTC | number_format(0,'',' ') }} €</div>
                        {% for message in app.flashes('success') %}
                            <div class="alert alert-success">
                                {{ message }}
                            </div>
                        {% endfor %}
                        {% for message in app.flashes('error') %}
                            <div class="alert alert-error">
                                {{ message }}
                            </div>
                        {% endfor %}
                    </div>
                    <div class="col-md-4">
                        <div id="contactForm" class="mt-4">
                            {{ form_start(form) }}
                            <div class="row">
                                <div class="col">{{ form_row(form.firstname) }}</div>
                                <div class="col">{{ form_row(form.lastname) }}</div>
                            </div>
                            <div class="row">
                                <div class="col">{{ form_row(form.phone) }}</div>
                                <div class="col">{{ form_row(form.email) }}</div>
                            </div>
                            {{ form_rest(form) }}
                            <div class="form-group">
                                <button class="btn btn-primary">Envoyer</button>
                            </div>
                            {{ form_end(form) }}
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <div class="container mt-4">

            <p>
                {{ produit.description | nl2br }}
            </p>

            <div class="row">
                <div class="col-md-8">
                    <h2>Caractéristiques</h2>
                    <table class="table table-striped">
                        <tr>
                            <td>Stock</td>
                            <td>{{ produit.stockQte }}</td>
                        </tr>
                        <tr>
                            <td>Poids</td>
                            <td>{{ produit.poids }} Kg</td>
                        </tr>
                        <tr>
                            <td>Couleur</td>
                            <td>{{ produit.couleur }}</td>
                        </tr>
                    </table>
                </div>
                <div class="col-md-4">
                    <h2>Spécificités</h2>
                </div>
            </div>
        </div>
    </div>
{% endblock %}
